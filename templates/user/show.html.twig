                    </tr>
                    <tr>
                        <th>Code Postal</th>
                        <td>{{ user.cp }}</td>
                    </tr>
                    <tr>
                        <th>Villes</th>
                        <td>{{ user.city }}</td>
                    </tr>
                    <tr>
                        <th>Details</th>
                        <td>{{ user.details }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
