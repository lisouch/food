    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    
    <a class="btn btn-danger" href="{{ path('product_delete', {'id': product.id}) }}" data-confirm="Etes-vous certain de vouloir supprimer?">Supprimer</a>
</form>
